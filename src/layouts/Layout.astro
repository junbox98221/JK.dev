---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import Background from '../components/Background.astro';
import SEOComponent from '../components/SEOComponent.astro';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import '../styles/global.css';
import type { BlogPost } from '../content/config';

export interface Props extends BlogPost {
  type?: 'website' | 'article';
}

const {
  title,
  description = 'JK.dev - 프론트엔드 개발과 성능 최적화에 관한 기술 블로그',
  heroImage,
  type = 'website',
  pubDate,
  tags,
} = Astro.props;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <SEOComponent
      title={title}
      description={description}
      type={type}
      heroImage={heroImage}
      pubDate={pubDate}
      tags={tags}
    />

    <link
      rel="preload"
      href="/fonts/PretendardVariable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <Analytics />
    <SpeedInsights />
  </head>
  <body
    class="flex min-h-screen flex-col bg-white text-zinc-900 dark:bg-zinc-900 dark:text-zinc-100"
  >

    <!-- Background component with dot pattern and ambient glow -->
    <Background />

    <div class="mx-auto w-full max-w-3xl flex-grow px-4 sm:px-6">
      <Navigation />
      <main class="py-12">
        <slot />
      </main>
    </div>
    <Footer />

  </body>
</html>
