---
import { Image } from 'astro:assets';
import { heroImages } from '../utils/heroImages';

export interface Props {
  slug: string;
  heroImage?: string | any;
  title: string;
  class?: string;
  loading?: 'eager' | 'lazy';
  fetchpriority?: 'high' | 'low' | 'auto';
  sizes?: string;
  priority?: boolean;
  decoding?: 'async' | 'sync' | 'auto';
  widths?: number[];
  preload?: boolean;
}

const {
  decoding,
  slug,
  heroImage,
  title,
  class: className = '',
  loading,
  fetchpriority,
  widths,
} = Astro.props;

const optimizedImage = heroImages[slug as keyof typeof heroImages];
---

{
  heroImage && optimizedImage && (
    <Image
      src={optimizedImage}
      alt={title}
      class={className}
      loading={loading}
      fetchpriority={fetchpriority}
      sizes={Astro.props.sizes}
      widths={widths}
      decoding={decoding}
    />
  )
}
